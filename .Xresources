! Run $ xrdb ~/.Xresources to source after updating

! Display settings

Xft.dpi: 96
Xft.autohint: false
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting: true
Xft.antialias: true
Xft.rgba: rgb

! Define terminal/vim  colors

! Colors sourced from https://material.io/guidelines/style/color.html#color-color-palette

! special
*.foreground:   #eeeeee
*.background:   #1B2428
*.cursorColor:  #eeeeee

! black 00
*.color0:       #E53935
! red 08
*.color8:       #E53935

! black-grey 01
*.color1:       #F4511E
! orange 09
*.color9:       #F4511E

! black-grey 02
*.color2:       #FFCA28
! yellow 0A
*.color10:      #FFCA28

! black-grey 03
*.color3:       #8BC34A
! green 0B
*.color11:     #8BC34A

! grey 04
*.color4:       #42A5F5
! blue 0C
*.color12:     #42A5F5

! light-grey 05
*.color5:       #009688
! teal 0D
*.color13:      #009688

! light-grey 06
*.color6:       #7E57C2
! purple 0E
*.color14:      #7E57C2

! white 07
*.color7:       #8D6E63
! brown 0F
*.color15:      #8D6E63




! terminal emulator settings
URxvt*termName: rxvt-unicode-256color
URxvt.font: xft:Iosevka:regular:size=16
URxvt.letterSpace: 0
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false
URxvt.cursorBlink:          true



! Transparency is kinda nice looking sometimes
! URxvt.transparent: true
! URxvt.shading: 30


! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.font: Source Sans Pro 16
rofi.padding: 16
rofi.lines: 10
rofi.bw: 3
rofi.color-enabled: true
rofi.color-window: #1B2428, #42A5F5, #1B2428
rofi.color-normal: #1B2428, #42A5F5, #1B2428, #42A5F5, #1B2428
rofi.color-active: #1B2428, #42A5F5, #1B2428, #42A5F5, #1B2428
rofi.color-urgent: #1B2428, #42A5F5, #1B2428, #42A5F5, #1B2428
