module-margin-left = 1
module-margin-right = 2

tray-position = none


[module/fs-root]
type = internal/fs
mount-0 = /
label-mounted = %{F#cecece}%free%%{F-}


[module/i3]
type = internal/i3
index-sort = true
pin-workspaces = true
enable-click = true
enable-scroll = true

