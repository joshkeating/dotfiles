[colors]
background = #222
foreground = #eee
linecolor = #f66
bordercolor = #333
accent = #e60053

[settings]
screenchange-reload = true

[global/wm]
margin-top = 8
margin-bottom = 8

[bar/Bar]

enable-ipc = true
monitor = ${env:MONITOR:eDP1}
bottom = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

border-top = 2
border-top-color = ${colors.bordercolor}

modules-left = bspwm i3
;modules-center = xwindow
modules-right = fs-root volume wifi battery memory cpu date

font-0 = SourceSansPro:weight=regular:size=16
font-1 = FontAwesome:size=16

width = 100%
height = 36

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 1
underline-color = ${colors.linecolor}
overline-size = 1
overline-color = ${colors.linecolor}

border-bottom-color = ${colors.bordercolor}

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

tray-position = none


[module/fs-root]
type = internal/fs
mount-0 = /
label-mounted = %{F#e60053}%percentage_used%%{F-} used of %mountpoint%


[module/bspwm]
type = internal/bspwm

enable-scroll = false

format = <label-state> <label-mode>
;format = <label-monitor> <label-state> <label-mode>
;pin-workspaces = false

ws-icon-default = x

label-focused = o
label-focused-background = #ee333333
label-focused-underline= #cc333333
label-focused-padding = 2

label-occupied = %{O-1}⏺%{O-1}
label-occupied-padding = 2

label-urgent = !
label-urgent-background = #bd2c40
label-urgent-padding = 2

label-empty = x
label-empty-foreground = #444
label-empty-padding = 2

label-monocle = 
label-monocle-padding = 2
label-monocle-background = #171717
label-monocle-foreground = ${colors.accent}

label-floating = 
label-floating-padding = 2
label-floating-background = #171717
label-floating-foreground = ${colors.accent}

label-locked = locked
label-locked-padding = 1
label-sticky = sticky
label-sticky-padding = 1
label-private = private
label-private-padding = 1

label-dimmed-background = ${root.background}
label-dimmed-underline = ${root.background}
label-dimmed-active-foreground = #f00


[module/i3]
type = internal/i3
index-sort = true
pin-workspaces = true

enable-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.accent}

label-focused = %index%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline= ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-focused-padding}

label-urgent = %index%!
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

label-visible = %index%
label-visible-foreground = ${module/bspwm.label-empty-foreground}
label-visible-padding = ${module/bspwm.label-empty-padding}


[module/cpu]
